        // 状态映射
        const statusMap = {
            active: { class: 'status-active', text: '进行中' },
            pending: { class: 'status-pending', text: '待处理' },
            completed: { class: 'status-completed', text: '已完成' },
            cancelled: { class: 'status-cancelled', text: '已取消' }
        };
        
        // 获取状态显示信息
        function getStatusDisplay(status) {
            return statusMap[status] || { class: 'status-unknown', text: '未知状态' };
        }
        
        // 格式化日期时间
        function formatDateTime(dateTimeString) {
            // 简单实现，实际应用中可能需要更复杂的日期处理
            return dateTimeString;
        }
        
        // 格式化地址（限制显示长度）
        function formatAddress(address, maxLength = 20) {
            if (address.length <= maxLength) {
                return address;
            }
            return address.substring(0, maxLength) + '...';
        }
        
        // 错误处理函数
        function handleError(message) {
            showMessage(message, 'error');
            console.error('操作失败:', message);
        }
        
        // 显示加载中状态
        function showLoading() {
            const loadingSpinner = document.getElementById('loadingSpinner');
            if (loadingSpinner) {
                loadingSpinner.style.display = 'block';
            }
        }
        
        // 隐藏加载中状态
        function hideLoading() {
            const loadingSpinner = document.getElementById('loadingSpinner');
            if (loadingSpinner) {
                loadingSpinner.style.display = 'none';
            }
        }
        
        // 显示消息提示
        function showMessage(message, type = 'success') {
            const messageContainer = document.getElementById('messageContainer');
            if (messageContainer) {
                // 移除之前的消息
                messageContainer.innerHTML = '';
                
                // 创建新的消息元素
                const alertClass = type === 'error' ? 'alert-danger' : 'alert-success';
                const iconClass = type === 'error' ? 'bi-exclamation-circle' : 'bi-check-circle';
                
                const alertElement = document.createElement('div');
                alertElement.className = `alert-custom ${alertClass}`;
                alertElement.innerHTML = `
                    <i class="bi ${iconClass}"></i>
                    <span>${message}</span>
                `;
                
                messageContainer.appendChild(alertElement);
                
                // 3秒后自动隐藏消息
                setTimeout(() => {
                    alertElement.style.opacity = '0';
                    alertElement.style.transition = 'opacity 0.3s ease';
                    setTimeout(() => {
                        messageContainer.innerHTML = '';
                    }, 300);
                }, 3000);
            }
        }
        
        // 渲染物流数据到表格
        function renderShipmentData(data) {
            const tableBody = document.getElementById('shipmentTableBody');
            if (!tableBody) {
                handleError('找不到表格元素');
                return;
            }
            
            // 清空表格内容
            tableBody.innerHTML = '';
            
            // 检查数据有效性
            if (!Array.isArray(data) || data.length === 0) {
                // 添加空数据提示行
                const emptyRow = document.createElement('tr');
                emptyRow.className = 'no-data-row';
                emptyRow.innerHTML = `
                    <td colspan="9" class="text-center">暂无物流信息</td>
                `;
                tableBody.appendChild(emptyRow);
                return;
            }
            
            // 遍历数据创建表格行
            data.forEach(item => {
                const row = document.createElement('tr');
                row.className = 'shipment-row';
                row.setAttribute('data-id', item.id);
                
                // 获取状态显示信息
                const statusInfo = getStatusDisplay(item.status);
                
                // 构建表格行内容
                row.innerHTML = `
                    <td>${item.id}</td>
                    <td>${item.user_id}</td>
                    <td title="${item.from_address}">${formatAddress(item.from_address)}</td>
                    <td title="${item.to_address}">${formatAddress(item.to_address)}</td>
                    <td>${formatDateTime(item.create_time)}</td>
                    <td>${formatDateTime(item.update_time)}</td>
                    <td>
                        <span class="status-badge ${statusInfo.class}">${statusInfo.text}</span>
                    </td>
                    <td>
                        <button class="btn-update-custom" onclick="openUpdateStatusModal('${item.id}')">
                            <i class="bi bi-pencil"></i>
                            更新状态
                        </button>
                    </td>
                `;
                
                // 添加行点击效果
                row.addEventListener('click', function(e) {
                    // 如果点击的是按钮，不触发行点击事件
                    if (e.target.tagName === 'BUTTON' || e.target.closest('.btn-action')) {
                        return;
                    }
                    // 这里可以添加查看详情的逻辑
                });
                
                // 添加鼠标悬停效果
                row.addEventListener('mouseenter', function() {
                    this.classList.add('hover');
                });
                
                row.addEventListener('mouseleave', function() {
                    this.classList.remove('hover');
                });
                
                // 添加行到表格
                tableBody.appendChild(row);
                
                // 触发渐入动画
                setTimeout(() => {
                    row.classList.add('fade-in');
                }, 50);
            });
            
            // 添加动画样式
            addAnimationStyles();
        }
        
        // 添加动画样式
        function addAnimationStyles() {
            // 检查是否已经添加了样式
            if (document.getElementById('table-animation-styles')) {
                return;
            }
            
            const style = document.createElement('style');
            style.id = 'table-animation-styles';
            style.textContent = `
                .shipment-row {
                    opacity: 0;
                    transform: translateY(10px);
                    transition: opacity 0.3s ease, transform 0.3s ease;
                }
                .shipment-row.fade-in {
                    opacity: 1;
                    transform: translateY(0);
                }
                .shipment-row.hover {
                    background-color: rgba(248, 250, 252, 0.5);
                }
            `;
            document.head.appendChild(style);
        }
        
        // 加载当前承运商的物流信息
        function loadCarrierShipments() {
            showLoading();
            
            // 模拟API请求延迟
            setTimeout(() => {
                try {
                    // 筛选与当前承运商相关的数据
                    const filteredData = mockShipmentData.filter(item => 
                        item.carrier === currentCarrierId
                    );
                    
                    // 按更新时间倒序排序
                    filteredData.sort((a, b) => {
                        return new Date(b.update_time) - new Date(a.update_time);
                    });
                    
                    // 渲染数据
                    renderShipmentData(filteredData);
                    showMessage(`共加载 ${filteredData.length} 条物流信息`);
                } catch (error) {
                    handleError('加载物流信息失败，请稍后重试');
                } finally {
                    hideLoading();
                }
            }, 300);
        }
        
        // 按物流ID搜索
        function searchByShipmentId() {
            const searchInput = document.getElementById('searchInput');
            const shipmentId = searchInput.value.trim();
            
            if (!shipmentId) {
                showMessage('请输入物流ID', 'error');
                return;
            }
            
            showLoading();
            
            // 模拟API请求延迟
            setTimeout(() => {
                try {
                    // 筛选与当前承运商相关且物流ID匹配的数据
                    const filteredData = mockShipmentData.filter(item => 
                        item.carrier === currentCarrierId && item.id === shipmentId
                    );
                    
                    if (filteredData.length === 0) {
                        showMessage('未找到匹配的物流信息', 'error');
                        renderShipmentData([]);
                    } else {
                        showMessage(`找到 ${filteredData.length} 条匹配记录`);
                        // 渲染搜索结果
                        renderShipmentData(filteredData);
                    }
                } catch (error) {
                    handleError('搜索失败，请稍后重试');
                } finally {
                    hideLoading();
                }
            }, 500);
        }
        
        // 按用户ID搜索
        function searchByUserId() {
            const searchInput = document.getElementById('searchInput');
            const userId = searchInput.value.trim();
            
            if (!userId) {
                showMessage('请输入用户ID', 'error');
                return;
            }
            
            showLoading();
            
            // 模拟API请求延迟
            setTimeout(() => {
                try {
                    // 筛选与当前承运商相关且用户ID匹配的数据
                    const filteredData = mockShipmentData.filter(item => 
                        item.carrier === currentCarrierId && item.user_id === userId
                    );
                    
                    if (filteredData.length === 0) {
                        showMessage('未找到匹配的物流信息', 'error');
                        renderShipmentData([]);
                    } else {
                        showMessage(`找到 ${filteredData.length} 条匹配记录`);
                        // 渲染搜索结果
                        renderShipmentData(filteredData);
                    }
                } catch (error) {
                    handleError('搜索失败，请稍后重试');
                } finally {
                    hideLoading();
                }
            }, 500);
        }
        
        // 清空搜索并显示所有物流信息
        function clearSearchAndShowAll() {
            const searchInput = document.getElementById('searchInput');
            searchInput.value = '';
            
            // 显示当前承运商的所有物流信息
            loadCarrierShipments();
        }
        
        // 打开更新状态模态框
        function openUpdateStatusModal(shipmentId) {
            // 查找对应的物流信息
            const shipment = mockShipmentData.find(item => item.id === shipmentId);
            if (!shipment) {
                handleError('找不到指定的物流信息');
                return;
            }
            
            // 填充模态框数据
            document.getElementById('shipmentIdDisplay').textContent = shipment.id;
            const statusInput = document.getElementById('statusInput');
            statusInput.value = getStatusDisplay(shipment.status).text;
            statusInput.focus();
            
            // 保存当前物流ID到模态框元素上，以便更新时使用
            const modal = document.getElementById('updateStatusModal');
            modal.dataset.shipmentId = shipmentId;
            
            // 显示模态框
            modal.style.display = 'block';
        }
        
        // 关闭更新状态模态框
        function closeUpdateModal() {
            document.getElementById('updateStatusModal').style.display = 'none';
        }
        
        // 更新物流状态
        function updateShipmentStatus() {
            const modal = document.getElementById('updateStatusModal');
            const shipmentId = modal.dataset.shipmentId;
            const newStatusText = document.getElementById('statusInput').value.trim();
            
            if (!newStatusText) {
                showMessage('请输入物流状态', 'error');
                return;
            }
            
            // 模拟API调用更新状态
            showLoading();
            
            setTimeout(() => {
                try {
                    // 在实际应用中，这里应该是API调用
                    // 这里我们只是简单地更新本地数据
                    const shipmentIndex = mockShipmentData.findIndex(item => item.id === shipmentId);
                    if (shipmentIndex !== -1) {
                        // 简单的状态映射
                        let statusKey = 'active'; // 默认状态
                        if (newStatusText.includes('待')) statusKey = 'pending';
                        else if (newStatusText.includes('完')) statusKey = 'completed';
                        else if (newStatusText.includes('取')) statusKey = 'cancelled';
                        
                        mockShipmentData[shipmentIndex].status = statusKey;
                        mockShipmentData[shipmentIndex].update_time = new Date().toLocaleString();
                        
                        // 重新加载数据
                        loadCarrierShipments();
                        showMessage('物流状态更新成功');
                    } else {
                        handleError('找不到指定的物流信息');
                    }
                } catch (error) {
                    handleError('更新物流状态失败');
                } finally {
                    hideLoading();
                    closeUpdateModal();
                }
            }, 800);
        }
        
        // 初始化函数
        function init() {
            updateUserInfoDisplay();
            handleResponsiveLayout();
            
            // 绑定搜索按钮事件
            const searchByShipmentBtn = document.getElementById('search-by-shipment-btn');
            const searchByUserBtn = document.getElementById('search-by-user-btn');
            const clearBtn = document.getElementById('clear-btn');
            const searchInput = document.getElementById('search-input');
            
            if (searchByShipmentBtn) searchByShipmentBtn.addEventListener('click', searchByShipmentId);
            if (searchByUserBtn) searchByUserBtn.addEventListener('click', searchByUserId);
            if (clearBtn) clearBtn.addEventListener('click', clearSearchAndShowAll);
            
            // 绑定回车搜索事件
            if (searchInput) {
                searchInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        // 默认按物流ID搜索
                        searchByShipmentId();
                    }
                });
            }
            
            // 加载当前承运商的物流信息
            loadCarrierShipments();
        }
        
        // 页面加载完成后初始化
        document.addEventListener('DOMContentLoaded', init);
